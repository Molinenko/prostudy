{% extends 'base.html.twig' %}

{% block title %}Curso{% endblock %}

{% block pagename %}{{curso.nombre}}{% endblock %}

{% block breadcrumb %}
    <li class=""><a href="{{path('curso_index')}}">Cursos</a></li>
    <li class="active">{{curso.nombre}}</li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12 col-md-8">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ curso.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ curso.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Estudio</th>
                        <td>{{ curso.estudio }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-12 col-md-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Listado de Materias</th>
                    </tr>
                </thead>
                {% for materia in curso.materias %}
                <tr>
                    <td>
                        <a href="{{path('curso_show', {'id':materia.id})}}">{{materia}}</a>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('curso_index') }}">Volver</a>

    <a class="btn btn-default" href="{{ path('curso_edit', {'id': curso.id}) }}">Editar</a>

    {{ include('curso/_delete_form.html.twig') }}
{% endblock %}
