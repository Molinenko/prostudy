{% extends 'base.html.twig' %}

{% block title %}Materia{% endblock %}

{% block pagename %}{{materia.nombre}}{% endblock %}

{% block breadcrumb %}
    <li class=""><a href="{{path('materia_index')}}">Materias</a></li>
    <li class="active">{{materia.nombre}}</li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12 col-md-8">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ materia.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ materia.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Horas estimadas</th>
                        <td>{{ materia.horasEstimadas }}</td>
                    </tr>
                    <tr>
                        <th>Profesor</th>
                        <td>{{ materia.profesor }}</td>
                    </tr>
                    <tr>
                        <th>Curso</th>
                        <td>{{ materia.curso }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-12 col-md-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Listado de Temas</th>
                    </tr>
                </thead>
                {% for tema in materia.temas %}
                <tr>
                    <td>
                        <a href="{{path('tema_show', {'id':tema.id})}}">{{tema}}</a>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('materia_index') }}">Volver</a>

    <a class="btn btn-default" href="{{ path('materia_edit', {'id': materia.id}) }}">Editar</a>

    {{ include('materia/_delete_form.html.twig') }}

{% endblock %}
