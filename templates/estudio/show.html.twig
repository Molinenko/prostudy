{% extends 'base.html.twig' %}

{% block title %}Estudio{% endblock %}

{% block pagename %}{{estudio.nombre}}{% endblock %}

{% block breadcrumb %}
    <li class=""><a href="{{path('estudio_index')}}">Estudios</a></li>
    <li class="active">{{estudio.nombre}}</li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12 col-md-8">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ estudio.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ estudio.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Organismo</th>
                        <td>{{ estudio.organismo }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-12 col-md-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Listado de Cursos</th>
                    </tr>
                </thead>
                {% for curso in estudio.cursos %}
                    <tr>
                        <td>
                            <a href="{{path('curso_show', {'id':curso.id})}}">{{curso}}</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('estudio_index') }}">Volver</a>

    <a class="btn btn-default" href="{{ path('estudio_edit', {'id': estudio.id}) }}">Editar</a>

    {{ include('estudio/_delete_form.html.twig') }}

{% endblock %}
